<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nomeComidaViewCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Nome da Comida"
        android:textColor="#590404"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewCarrinho"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descricaoViewCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Descrição da Comida"
        app:layout_constraintStart_toEndOf="@+id/imageViewCarrinho"
        app:layout_constraintTop_toBottomOf="@+id/nomeComidaViewCarrinho" />

    <TextView
        android:id="@+id/valorViewCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="R$ 0.00"
        app:layout_constraintStart_toEndOf="@+id/imageViewCarrinho"
        app:layout_constraintTop_toBottomOf="@+id/descricaoViewCarrinho" />

    <Button
        android:id="@+id/removeCarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#8F0606"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/valorViewCarrinho"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCarrinho"
        android:layout_width="106dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food_image1"
        tools:srcCompat="@drawable/food_image1" />
</androidx.constraintlayout.widget.ConstraintLayout>